# Include package data
include README.md
include LICENSE
include pyproject.toml

# Include all resource files
recursive-include contextualize/resources *.md *.json *.yaml *.yml

# Include templates
recursive-include contextualize/resources/templates *

# Include agent and command resources
recursive-include contextualize/resources/agents *
recursive-include contextualize/resources/commands *

# Exclude Python cache
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
